{
  "name": "app",
  "version": "0.1.0",
  "main": "main.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@hookform/resolvers": "^2.6.0",
    "@reduxjs/toolkit": "^1.6.0",
    "@szhsin/react-menu": "^3.0.0",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@testing-library/user-event": "^13.5.0",
    "allotment": "^1.10.0",
    "axios": "^0.21.1",
    "bson": "^4.3.0",
    "cross-env": "^7.0.3",
    "dotenv": "^8.6.0",
    "electron-is-dev": "^1.2.0",
    "electron-settings": "^4.0.2",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^4.3.9",
    "form-data": "^2.3.3",
    "joi": "^17.4.0",
    "js-base64": "^3.6.1",
    "lodash": "^4.17.21",
    "luxon": "^1.28.0",
    "mkdirp": "^1.0.4",
    "object-treeify": "^2.0.1",
    "pluralize": "^7.0.0",
    "react": "^17.0.2",
    "react-beautiful-dnd": "^13.1.0",
    "react-complex-tree": "^1.1.4",
    "react-contexify": "^5.0.0",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.9.0",
    "react-image-gallery": "^1.2.7",
    "react-lazy-load-image-component": "^1.5.1",
    "react-loading-skeleton": "^2.2.0",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "5.0.0",
    "react-terminal": "^1.2.1",
    "react-toastify": "^7.0.4",
    "redux": "^4.1.0",
    "redux-promise": "^0.6.0",
    "redux-thunk": "^2.3.0",
    "web-vitals": "^2.1.4",
    "yargs": "^16.2.0"
  },
  "scripts": {
    "dev": "concurrently -k \"cross-env BROWSER=none npm start\" \"cross-env ELECTRON_START_URL=http://localhost:3000 npm run electron\"",
    "electron": "wait-on tcp:3000 && electron .",

    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",

    "clean-win": "rd /S /Q dist && rd /S /Q build",
    "package:win": "electron-builder build --win -c.extraMetadata.main=build/main.js --publish never",

    "clean-linux": "rm -rf build dist",
    "package:linux": "electron-builder build --linux -c.extraMetadata.main=build/main.js --publish never",

    "clean-macos": "rm -rf build dist",
    "package:macos": "electron-builder build --mac -c.extraMetadata.main=build/main.js --publish never",

    "deploy:win": "electron-builder build --win -c.extraMetadata.main=build/main.js --publish always",
    "deploy:macos": "electron-builder build --mac -c.extraMetadata.main=build/main.js --publish always",
    "deploy:linux": "electron-builder build --linux -c.extraMetadata.main=build/main.js --publish always"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "concurrently": "^5.2.0",
    "dotenv-webpack": "^7.0.3",
    "electron": "^13.1.5",
    "electron-builder": "^22.11.7",
    "electron-devtools-installer": "^3.1.1",
    "electron-rebuild": "^3.2.7",
    "electron-reload": "^1.5.0",
    "jest": "^27.0.6",
    "patch-package": "^6.4.7",
    "postcss": "^8.4.7",
    "postcss-import": "^14.0.2",
    "postcss-nesting": "^10.1.3",
    "spectron": "^15.0.0",
    "tailwindcss": "^3.0.23",
    "wait-on": "^5.1.0"
  },
  "build": {
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "repo": "raisehand-image-container",
      "owner": "Raisehand Software Private Limited"
    }
  }
}
